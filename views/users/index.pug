extends ../layout/common

block content

	h1 Users
	.d-flex.align-items-center.pt-3
		a.btn.btn-primary.mb-3(href="/users/create") New
		form.form-group.d-flex.ml-auto(action="/users/search", method ="GET")
			input.form-control(type="text",name = "q")
			button.btn.btn-primary Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Action

		each user in users
			tr
				td
					img(src=user.avatar?user.avatar:'/images/img-placeholder.jpg',width='32')
				td=user.name
				td=user.phone
				td
					a.btn.btn-light(href='/users/'+user._id) View